<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280sp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_transparent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5sp">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newVersion"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/button_cancel"
        android:layout_width="21sp"
        android:layout_height="21sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:background="@drawable/cancel"/>

    <RelativeLayout
        android:id="@+id/layout_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/top"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/textView_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新版本： 1.0  "
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/layout_version"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp">

        <Button
            android:id="@+id/button_update"
            android:layout_width="120sp"
            android:layout_height="40sp"
            android:gravity="center"
            android:background="@drawable/ripple_white_blue"
            android:text="@string/update"
            android:textSize="18sp"/>
    </RelativeLayout>




</RelativeLayout>
