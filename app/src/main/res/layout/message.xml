<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_transparent">

        <com.example.yzn.activity.ui.CircleImageView
            android:id="@+id/imageView_head"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/haed_boy"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7sp"
            android:layout_marginStart="7sp"/>

        <ImageView
            android:id="@+id/imageView_phone"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/phonenumber"
            android:layout_toEndOf="@+id/imageView_head"
            android:layout_marginTop="11sp"
            android:layout_marginStart="7sp"/>

        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_toEndOf="@+id/imageView_phone"
            android:layout_marginStart="11sp"
            android:layout_marginTop="5sp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="@string/unknown"/>

        <ImageView
            android:id="@+id/imageView_content"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_below="@+id/imageView_head"
            android:layout_marginTop="10sp"
            android:layout_marginStart="7sp"
            android:background="@drawable/content"/>

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_content"
            android:layout_marginTop="7sp"
            android:layout_marginStart="15sp"
            android:textColor="#000000"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="7sp"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="16sp"
        android:paddingStart="16sp"
        android:text="@string/delete"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp" />




</LinearLayout>
