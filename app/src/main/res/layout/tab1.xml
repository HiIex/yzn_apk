<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_domain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_transparent"
        android:layout_marginTop="3sp"
        android:layout_marginStart="3sp"
        android:layout_marginEnd="3sp"
        android:orientation="horizontal">

        <com.example.yzn.activity.ui.ImageTextButton
            android:id="@+id/button_condition"
            android:layout_width="0sp"
            android:layout_height="70sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:gravity="center" />

        <com.example.yzn.activity.ui.ImageTextButton
            android:id="@+id/button_system"
            android:layout_width="0sp"
            android:layout_height="70sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:gravity="center" />

        <com.example.yzn.activity.ui.ImageTextButton
            android:id="@+id/button_activity"
            android:layout_width="0sp"
            android:layout_height="70sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:layout_marginStart="10sp"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="3sp"
        android:layout_marginStart="3sp"
        android:layout_marginBottom="3sp">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/layout_refresh_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00FFAE"
                android:dividerHeight="10sp"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>











</RelativeLayout>
